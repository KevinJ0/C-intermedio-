
@{
    ViewData["Title"] = "index";
}


<div class="container">
    <h2>Tabla de multiplicación</h2>
    <style>
        h2 {
        margin-bottom: 5rem;
        }
        p {
            display: inline;
        }
        .table {
        
        display: inline-block;
        width: 9rem;
        }
        .td-custom{

            display: block;
            min-width: 70px;

        }
    </style>

    @for (int k = 0; k <= 12; k++)
    {
        <table class="table">
            <tr>
                @for (int i = 0; i <= 12; i++)
                {
                    int total = k * i;
                    <td class="td-custom"><p>@k</p><p>x</p>@i<p>=@total </p></td>
                }
            </tr>
        </table>
    }


</div>
